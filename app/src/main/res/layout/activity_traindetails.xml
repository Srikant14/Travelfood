<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context=".traindetails"
    android:textAlignment="center">

    <MultiAutoCompleteTextView
        android:hint="Boarding station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multiAutoCompleteTextView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />



    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Trainno/Trainname"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="45dp"
        android:textEditSuggestionItemLayout="@android:color/holo_blue_light"
        android:layout_above="@+id/multiAutoCompleteTextView" />
    <requestFocus />

    <Button
        android:text="Okay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/multiAutoCompleteTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:id="@+id/button4" />

    <TextView
        android:text="Enter details of train"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/textView3"
        android:background="?attr/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

</RelativeLayout>







